# Variables de Entorno para Vercel - CONFIGURAR EN EL PANEL DE VERCEL

# Base de Datos (Vercel PostgreSQL o externa)
DATABASE_URL=postgresql://usuario:password@host:5432/database_name

# JWT Secrets (CAMBIAR POR VALORES SEGUROS)
JWT_SECRET=tu-jwt-secret-super-seguro-aqui
JWT_REFRESH_SECRET=tu-jwt-refresh-secret-super-seguro-aqui

# Configuraci√≥n del Entorno
NODE_ENV=production

# CORS - URL de tu frontend en Vercel
CORS_ORIGIN=https://tu-frontend.vercel.app

# Email Configuration (si usas nodemailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu-email@gmail.com
MAIL_PASS=tu-app-password

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Stripe (si usas pagos)
STRIPE_SECRET_KEY=sk_test_o_sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...